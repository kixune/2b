<% provide(:title, "Gemstones") %>


<h1>Gemstones</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Version</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gemstones.each do |gemstone| %>
      <tr>
        <td><%= gemstone.name %></td>
        <td><%= gemstone.version %></td>
        <td><%= gemstone.summary %></td>
        <td><%= link_to 'See More', gemstone %></td>
        <% if current_user?(@user) || current_user.admin %>
        <td><%= link_to 'Edit', (gemstone) %></td>
        <td><%= link_to 'Destroy', gemstone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gemstone', new_gemstone_path, class: "btn" %>
