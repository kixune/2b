<header>
  <div class="container tab" id="bigtab">
  <%= link_to "Rubysmart", '/home', class: "logo" %>
  </div>
    <nav>
      <ul>
        <li class="container tab"><%= link_to "Home",   '/home' %></li>
        <li class="container tab"><%= link_to "About",   '/about' %></li>
        <li class="container tab"><%= link_to "Help",   '/help' %></li>

        <% if logged_in? %>

        <li class="container tab"><%= link_to "#{@current_user.name}",     "/users/#{current_user.id}" %></li>
        <li class="container tab"><%= link_to "Logout", '/logout', method: "delete"    %></li>

        <% else %>
        <li class="container tab"><%= link_to "Login", '/login' %></li>
        <% end %>
      </ul>
    </nav>
</header>
