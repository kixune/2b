<% provide(:title, "Users") %>


<% if current_user.admin %>
<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn" %></td>
        <td><%= link_to 'Remove', user, class: "btn", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= link_to 'New User', new_user_path %>
<% else %>
    <h1>Nothing to see here!</h1>
<% end %>
  </tbody>
</table>

<br>
